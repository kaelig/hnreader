{
  "name": "Hacker News Reader",
  "description": "A simple HN reader that's pretty simple and fast",
  "keywords": [
    "hacker news"
  ],
  "website": "https://www.read.hn",
  "repository": "https://github.com/kaelig/readhn.git",
  "logo": "https://readhn.herokuapp.com/apple-touch-icon.png",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "addons": [ "memcachedcloud" ],
  "env": {
    "NUMBER_OF_STORIES": {
      "description": "Number of stories to show (default: 25)",
      "value": "25",
      "required": false
    }
  }
}
