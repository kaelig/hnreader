doctype html
html
  head
    meta(charset="utf-8")
    title Read Hacker News
    link(rel="stylesheet", href="styles.css")
    meta(name="viewport", content="initial-scale=1")
  body
    h1 Top Stories
    ul.top-stories
      each story in stories
        li.story(id= story.id)
          a.story__action(href= story.instapaperUrl target= "_blank")
            h2.story__title= story.title
            div.story__hostname= story.hostname
